{
  "title": "JS葵花宝典",
  "author": "余树",
  "plugins": [
    "-lunr",
    "-search",
    "search-pro",
    "-sharing",
    "disqus",
    "github-buttons",
    "editlink",
    "ga",
    "-highlight",
    "prism",
    "bibtex-indexed-cite",
    "anchor-navigation-ex",
    "page-footer-ex",
    "splitter",
    "todo",
    "copy-code-button",
    "expandable-chapters-small",
    "donate"
  ],
  "pluginsConfig": {
    "search-pro": {
      "cutWordLib": "nodejieba",
      "defineWord": ["Gitbook Use"]
    },
    "anchor-navigation-ex": {
      "showLevel": false
    },
    "disqus": {
      "shortName": "sunflower-collection"
    },
    "github-buttons": {
      "buttons": [
        {
          "user": "lizhoukai",
          "repo": "sunflower-collection",
          "type": "star",
          "size": "small",
          "count": true
        }
      ]
    },
    "editlink": {
      "base": "https://github.com/lizhoukai/sunflower-collection/blob/master",
      "label": "Edit",
      "multilingual": false
    },
    "ga": {
      "token": "UA-134044166-1"
    },
    "prism": {
      "ignore": ["mermaid", "eval-js"],
      "css": ["prismjs/themes/prism-solarizedlight.css"]
    },
    "page-footer-ex": {
      "copyright": "By [余树](https://github.com/lizhoukai)，使用[知识共享 署名-相同方式共享 4.0协议](https://creativecommons.org/licenses/by-sa/4.0/)发布",
      "markdown": true,
      "update_label": "此页面修订于：",
      "update_format": "YYYY-MM-DD HH:mm:ss"
    },
    "bibtex-indexed-cite": {
      "path": "/"
    },
    "donate": {
      "wechat": "https://ws1.sinaimg.cn/large/005yuiosly1fzvvqek0cfj30s00s0tc9.jpg",
      "alipay": "https://ws1.sinaimg.cn/large/005yuiosly1fzvvqvr5hfj30q914uteo.jpg",
      "title": "",
      "button": "赏",
      "alipayText": "支付宝打赏",
      "wechatText": "微信打赏"
    }
  }
}
